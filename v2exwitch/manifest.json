{
  "name": "V2EXWitch",
  "version": "1.2.1",
  "description": "V2EX Account Notifier & Switcher",
  "manifest_version": 2,
  "icons": {
    "128": "static/icon128.png",
    "48": "static/icon48.png"
  },
  "browser_action": {
    "default_icon": "static/favicon.ico",
    "default_popup": "popup.html"
  },
  "permissions": [
    "cookies",
    "tabs",
    "webRequest",
    "https://www.v2ex.com/"
  ],
  "background": {
    "scripts": [
      "lib/underscore.js",
      "lib/jquery.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["https://www.v2ex.com/signin"],
      "js": ["lib/jquery.js", "signin.js"]
    },
    {
      "matches": ["https://www.v2ex.com/notifications"],
      "js": ["lib/jquery.js", "notifications.js"]
    }
  ]
}
